{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"builder": "NIXPACKS",
		"buildCommand": "echo \"no build\""
	},
	"deploy": {
		"runtime": "V2",
		"numReplicas": 1,
		"sleepApplication": false,
		"multiRegionConfig": {
			"us-west1": {
				"numReplicas": 1
			}
		},
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 3,
		"startCommand": "bun run start:bot"
	}
}
