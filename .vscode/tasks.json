{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev",
			"detail": "run all apps in dev mode + tests",
			"dependsOn": [
				"web/dev:app",
				"web/dev:convex",
				"web/test:unit:watch",
				"bot/dev",
				"typecheck:watch"
			],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "web/dev:app",
			"detail": "run web app in dev mode",
			"type": "shell",
			"command": ["bun", "dev:app"],
			"options": {
				"cwd": "workspaces/web"
			}
		},
		{
			"label": "web/dev:convex",
			"detail": "run convex dev",
			"type": "shell",
			"command": ["bun", "dev:convex"],
			"options": {
				"cwd": "workspaces/web"
			}
		},
		{
			"label": "web/test:unit:watch",
			"detail": "run tsc in watch mode",
			"type": "shell",
			"command": ["bun", "run", "test:unit:watch"],
			"options": {
				"cwd": "workspaces/web"
			}
		},
		{
			"label": "bot/dev",
			"detail": "run bot in dev mode",
			"type": "shell",
			"command": ["bun", "dev"],
			"options": {
				"cwd": "workspaces/bot"
			}
		},
		{
			"label": "typecheck:watch",
			"detail": "run tsc in watch mode",
			"type": "shell",
			"command": ["bunx", "tsc", "-b", "--watch"],
			"problemMatcher": "$tsc-watch"
		}
	]
}
