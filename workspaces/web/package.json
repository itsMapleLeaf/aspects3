{
	"name": "@workspace/web",
	"private": true,
	"type": "module",
	"packageManager": "bun@1.2.2",
	"engines": {
		"node": "22 || 23"
	},
	"scripts": {
		"build": "tsx scripts/generate-guidebook-pdf.ts && react-router build",
		"deploy": "convex deploy --cmd \"bun run build\"",
		"dev": "convex dev --until-success && run-p --race 'dev:*'",
		"dev:app": "react-router dev",
		"dev:convex": "convex dev --tail-logs",
		"preview": "bun start",
		"start": "PORT=5173 react-router-serve ./build/server/index.js",
		"test": "run-s 'test:*'",
		"test:unit": "bun test app convex --coverage",
		"test:e2e": "playwright test",
		"typecheck": "react-router typegen && tsc"
	},
